{{ "{% extends 'MvCrudGeneratorResourcesBundle::layout.html.twig' %}" }}

{{ "{% trans_default_domain 'mvcrud' %}" }}

{{ "{% block content -%}" }}
    <div class="admin-block">
        <h1>{{ "{{ '%entity% edit'|trans({'%entity%':entity})|capitalize }}" }}</h1>
        <div class="admin-block-content">

            <form action="{{ "{{ path('" ~ route_name_prefix ~ "_update', { 'id': entity.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }}>
                <input type="hidden" name="_method" value="PUT" />
                {{ "{{ form_widget(edit_form) }}" }}
                <p>
                    <button type="submit">{{ "{{ 'edit'|trans|capitalize }}" }}</button>
                </p>
            </form>

            {% set hide_edit, hide_delete = true, false %}
            {% include 'crud/views/others/record_actions.html.twig.twig' %}
        </div>
    </div>
{{ "{% endblock %}" }}
